<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PetFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/pet_gif" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false"
            android:id="@+id/cv_one_login"
            app:cardBackgroundColor="#fcfcfc"
            card_view:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_160sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precious"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dob"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="08/05"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/gender"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Female"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Puppy"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/breed"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Dobermann"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/about_label"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="@string/about"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="vertical">

                    <com.ornach.nobobutton.NoboButton
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        app:nb_backgroundColor="@color/teal_200"
                        app:nb_borderColor="#FFFFFF"
                        app:nb_borderWidth="2dp"
                        app:nb_drawableResource="@drawable/ic_home"
                        app:nb_focusColor="#B83CC3"
                        app:nb_fontIcon="&#xf291;"
                        app:nb_radius="5dp"
                        app:nb_text="Adopt Precious Now!"
                        app:nb_textColor="#FFF"
                        app:nb_textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.ornach.nobobutton.NoboButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            app:nb_backgroundColor="#B83CC3"
                            app:nb_borderColor="#FFFFFF"
                            app:nb_borderWidth="2dp"
                            app:nb_drawableResource="@drawable/ic_baseline_favorite_24"
                            app:nb_focusColor="#FA2"
                            app:nb_fontIcon="&#xf291;"
                            app:nb_radius="5dp"
                            app:nb_text="Favourite"
                            app:nb_textColor="#FFF"
                            app:nb_textSize="14sp" />

                        <com.ornach.nobobutton.NoboButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            app:nb_backgroundColor="#333"
                            app:nb_borderColor="#FFFFFF"
                            app:nb_borderWidth="2dp"
                            app:nb_drawableResource="@drawable/ic_location"
                            app:nb_focusColor="#B83CC3"
                            app:nb_fontIcon="&#xf291;"
                            app:nb_radius="5dp"
                            app:nb_text="Book a Visit"
                            app:nb_textColor="#FFF"
                            app:nb_textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>